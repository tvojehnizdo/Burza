# KONFIGURACE PRO MAXIMÁLNÍ VÝNOS - AGRESIVNÍ TRADING
# Pro okamžité zisky, časté malé obchody

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Kraken API Configuration
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# AGRESIVNÍ Trading Configuration
# Nižší práh = více obchodů
MIN_PROFIT_THRESHOLD=0.1

# Menší obchody = častější příležitosti
# Pro $50+$30 = $80 total, použijeme $10-15 per trade
MAX_TRADE_AMOUNT=15

# Velmi časté kontroly = okamžité reakce (2 sekundy)
CHECK_INTERVAL=2

# Trading pair - můžete přidat více párů pro více příležitostí
TRADING_PAIR=BTC/USDT

# Alternativní páry pro testování (zakomentované)
# TRADING_PAIR=ETH/USDT
# TRADING_PAIR=BNB/USDT

# Risk Management - agresivnější ale stále bezpečné
MAX_POSITION_SIZE=80
STOP_LOSS_PERCENT=1.5

# SCALPING MODE - pro velmi časté malé zisky
SCALPING_MODE=true
SCALPING_PROFIT_TARGET=0.15
SCALPING_MIN_TRADE=10
