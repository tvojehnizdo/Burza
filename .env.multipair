# Multi-Pair Trading Configuration
# This configuration enables CONTINUOUS LOOP trading across ALL available pairs
# Bot will: BUY → SELL → BUY → SELL in continuous cycles

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Multi-Pair Configuration
MULTI_PAIR_MODE=true
QUOTE_CURRENCY=USDC
TRADING_PAIR=BTC/USDC  # Fallback if multi-pair mode fails

# Trading Configuration - Aggressive for continuous loop trading
MIN_PROFIT_THRESHOLD=0.1
MAX_TRADE_AMOUNT=15
CHECK_INTERVAL=2

# Risk Management
MAX_POSITION_SIZE=500
STOP_LOSS_PERCENT=2.0

# Scalping Configuration - CONTINUOUS LOOP MODE
# Bot immediately sells after buying for non-stop trading cycles
SCALPING_MODE=true
SCALPING_PROFIT_TARGET=0.15
SCALPING_MIN_TRADE=10
